.PHONY: clean clean_coverage test_all


########################################################################
# OCaml configuration.
# Delete this section if you are not building OCaml files.
#

################################################
# Configuration.  You may want to modify any of these configuration
# variables.
#

#
# This project requires ocamlfind (default - false).
#
USE_OCAMLFIND = true

#
OCAMLPACKS[] =
   batteries

#
if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

#
# Include path
#
# OCAMLINCLUDES +=


#
# Various options
#
# OCAMLFLAGS    +=
# OCAMLCFLAGS   +=
# OCAMLOPTFLAGS +=
# OCAML_LINK_FLAGS +=
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=


################################################
# Build an OCaml program
#

FILES[] =
   run_tests

#
PROGRAM = run_tests
# OCAML_LIBS +=
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS +=
# OCAML_LIB_FLAGS +=
#

build_runner: $(OCamlProgram $(PROGRAM), $(FILES))


########################################################################
#
test_all: clean_coverage $(PROGRAM)
	./$(PROGRAM)

clean:
	rm -f *~ *.opt *.cmi *.cmx *.o *.omc *.log *.cache *.bc *.o *.out $(PROGRAM)

clean_coverage:
    rm -f bisect-*.out
